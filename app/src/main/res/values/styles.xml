<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>-->

    <style name="CalcButton" parent="@android:style/Widget.TextView">
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">32dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginRight">0.5dp</item>
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="CalcButton.Numeral">
        <item name="android:textColor">#80000000</item>
    </style>

    <style name="CalcButton.Operator">
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">36dp</item>
        <item name="android:colorBackground">#fffafafa</item>
    </style>

    <style name="CalcButton.Operator.ReducedSize">
        <item name="android:textSize">28dp</item>
    </style>

    <style name="Preview" parent="@style/TextAppearance.AppCompat.Headline">
        <!--<item name="android:textColor">@android:color/holo_blue_dark</item>-->
        <item name="android:textColor">#80000000</item> <!-- @color/bright_foreground_disabled_material_light -->
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Display" parent="@style/TextAppearance.AppCompat.Display1">
        <!--<item name="android:textColor">@android:color/primary_text_light_nodisable</item>-->
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalcNight" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#1b1b1b</item>
        <item name="colorAccent">#bcbcbc</item>-->
    </style>

</resources>
