<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DisplayBackground"
    tools:context="com.derekbearded.android.swipecalc.calc.basiccalc.BasicCalcActivity">

    <view
        android:id="@+id/gridLayout"
        class="com.derekbearded.android.swipecalc.util.ButtonGridCompat"
        style="@style/ButtonGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:columnOrderPreserved="true"
        android:orientation="horizontal"
        android:rowCount="5"
        android:rowOrderPreserved="true"
        android:useDefaultMargins="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/clear"
            style="@style/CalcButton.Operator.ReducedSize.Clear"
            android:clickable="true"
            android:text="@string/clear"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/parentheses"
            style="@style/CalcButton.Operator.ReducedSize"
            android:text="@string/parentheses"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/percent"
            style="@style/CalcButton.Operator.ReducedSize"
            android:text="@string/percent"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/divide"
            style="@style/CalcButton.Operator"
            android:text="@string/divide"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_7"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_7"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_8"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_8"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_9"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_9"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/times"
            style="@style/CalcButton.Operator"
            android:text="@string/times"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_4"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_4"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_5"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_5"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_6"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_6"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/minus"
            style="@style/CalcButton.Operator"
            android:text="@string/minus"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_1"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_1"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_2"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_2"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_3"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_3"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/plus"
            style="@style/CalcButton.Operator"
            android:text="@string/plus"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/negate"
            style="@style/CalcButton.Operator"
            android:text="@string/negate"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_0"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_0"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_."
            style="@style/CalcButton.Numeral"
            android:text="@string/decimal"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/equals"
            style="@style/CalcButton.Operator.Equals"
            android:text="@string/equals"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />
    </view>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="Delete Button"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/backspace" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <SeekBar
        android:id="@+id/seekBarSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        app:layout_constraintBottom_toTopOf="@+id/seekBarSpacing"
        app:layout_constraintEnd_toStartOf="@+id/editNumberSize"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="1"
        tools:progress="25" />

    <TextView
        android:id="@+id/textViewSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:gravity="center|start"
        android:text="Size"
        style="@style/EditorLabels"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarSize"
        app:layout_constraintEnd_toStartOf="@+id/seekBarSize"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekBarSize" />

    <EditText
        android:id="@+id/editNumberSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:minWidth="24dp"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/seekBarSize"
        app:layout_constraintTop_toTopOf="@+id/seekBarSize" />


    <TextView
        android:id="@+id/textViewSpacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:gravity="center|start"
        android:text="Spacing"
        style="@style/EditorLabels"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarSpacing"
        app:layout_constraintEnd_toStartOf="@+id/seekBarSpacing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekBarSpacing" />

    <SeekBar
        android:id="@+id/seekBarSpacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="150"
        app:layout_constraintBottom_toTopOf="@+id/seekBarDuration"
        app:layout_constraintEnd_toStartOf="@+id/editNumberSpacing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewSpacing"
        app:layout_constraintTop_toBottomOf="@+id/seekBarSize"
        app:layout_constraintVertical_weight="1"
        tools:progress="160" />

    <EditText
        android:id="@+id/editNumberSpacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:minWidth="24dp"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarSpacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/seekBarSpacing"
        app:layout_constraintTop_toTopOf="@+id/seekBarSpacing"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/textViewDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:gravity="center|start"
        android:text="Duration"
        style="@style/EditorLabels"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarDuration"
        app:layout_constraintEnd_toStartOf="@+id/seekBarDuration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekBarDuration" />

    <EditText
        android:id="@+id/editNumberDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:minWidth="24dp"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarDuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seekBarDuration"
        app:layout_constraintTop_toTopOf="@+id/seekBarDuration" />

    <SeekBar
        android:id="@+id/seekBarDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="5000"
        app:layout_constraintBottom_toTopOf="@+id/seekBarOpacity"
        app:layout_constraintEnd_toStartOf="@+id/editNumberDuration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewDuration"
        app:layout_constraintTop_toBottomOf="@+id/seekBarSpacing"
        app:layout_constraintVertical_weight="1"
        tools:progress="1000" />

    <TextView
        android:id="@+id/preview"
        style="@style/Preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:maxLines="2"
        android:text="2500.12345678"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/display"
        app:layout_constraintVertical_weight="2" />

    <TextView
        android:id="@+id/display"
        style="@style/Display"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center|right|end"
        android:lines="1"
        android:text="5x5x100\n+3.141592654"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/preview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="2" />

    <TextView
        android:id="@+id/textViewOpacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:gravity="center|start"
        android:text="Opacity"
        style="@style/EditorLabels"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarOpacity"
        app:layout_constraintEnd_toStartOf="@+id/seekBarOpacity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekBarOpacity" />

    <SeekBar
        android:id="@+id/seekBarOpacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="255"
        app:layout_constraintBottom_toTopOf="@+id/switchCircleLine"
        app:layout_constraintEnd_toStartOf="@+id/editNumberOpacity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewOpacity"
        app:layout_constraintTop_toBottomOf="@+id/seekBarDuration"
        app:layout_constraintVertical_weight="1"
        tools:progress="150" />

    <EditText
        android:id="@+id/editNumberOpacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:minWidth="24dp"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarOpacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/seekBarOpacity"
        app:layout_constraintTop_toTopOf="@+id/seekBarOpacity" />

    <Switch
        android:id="@+id/switchCircleLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:checked="false"
        android:showText="false"
        app:layout_constraintBottom_toTopOf="@+id/seekBarPath"
        app:layout_constraintEnd_toStartOf="@+id/textViewLine"
        app:layout_constraintTop_toBottomOf="@+id/seekBarOpacity" />

    <TextView
        android:id="@+id/textViewCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:gravity="end"
        android:text="Circle"
        style="@style/EditorLabels"
        app:layout_constraintBottom_toBottomOf="@+id/switchCircleLine"
        app:layout_constraintEnd_toStartOf="@+id/switchCircleLine"
        app:layout_constraintTop_toTopOf="@+id/switchCircleLine" />

    <TextView
        android:id="@+id/textViewLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Line"
        style="@style/EditorLabels"
        app:layout_constraintBottom_toBottomOf="@+id/switchCircleLine"
        app:layout_constraintEnd_toStartOf="@+id/editNumberOpacity"
        app:layout_constraintTop_toTopOf="@+id/switchCircleLine" />

    <TextView
        android:id="@+id/textViewPath"
        style="@style/EditorLabels"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:gravity="center|start"
        android:text="Path"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarPath"
        app:layout_constraintEnd_toStartOf="@+id/seekBarPath"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekBarPath" />

    <SeekBar
        android:id="@+id/seekBarPath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/display"
        app:layout_constraintEnd_toStartOf="@+id/toggleSite"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewPath"
        app:layout_constraintTop_toBottomOf="@+id/switchCircleLine" />

    <Button
        android:id="@+id/buttonDefaults"
        style="@style/AnimButton"
        android:theme="@style/Button.AnimEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:minHeight="44dp"
        android:minWidth="72dp"
        android:text="@string/resetDefaults"
        android:textAllCaps="false"
        android:textSize="@dimen/TextAnimEditor"
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="@+id/switchCircleLine"
        app:layout_constraintEnd_toStartOf="@+id/textViewCircle"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/switchCircleLine"
        app:layout_constraintVertical_bias="0.5"
        tools:text="@string/resetDefaults" />

    <ToggleButton
        android:id="@+id/toggleSite"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:minHeight="44dp"
        android:minWidth="0dp"
        android:textAllCaps="false"
        android:textOff="@string/noSites"
        android:textOn="@string/activationSites"
        android:textSize="14dp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarPath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seekBarPath"
        app:layout_constraintTop_toTopOf="@+id/seekBarPath"
        tools:textOff="@string/noSites"
        tools:textOn="@string/activationSites" />

</android.support.constraint.ConstraintLayout>