<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sputnik.gesturecalc.calc.basiccalc.BasicCalcActivity">

    <view
        android:id="@+id/gridLayout"
        class="com.example.sputnik.gesturecalc.util.ButtonGridCompat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alignmentMode="alignBounds"
        android:background="@color/colorPrimary"
        android:columnCount="4"
        android:columnOrderPreserved="true"
        android:orientation="horizontal"
        android:rowCount="5"
        android:rowOrderPreserved="true"
        android:useDefaultMargins="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/clear"
            style="@style/CalcButton.Operator.ReducedSize"
            android:clickable="true"
            android:text="@string/clear"
            android:textColor="#F4511E"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/parentheses"
            style="@style/CalcButton.Operator.ReducedSize"
            android:text="@string/parentheses"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/percent"
            style="@style/CalcButton.Operator.ReducedSize"
            android:text="@string/percent"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/divide"
            style="@style/CalcButton.Operator"
            android:text="@string/divide"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_7"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_7"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_8"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_8"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_9"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_9"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/times"
            style="@style/CalcButton.Operator"
            android:text="@string/times"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_4"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_4"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_5"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_5"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_6"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_6"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/minus"
            style="@style/CalcButton.Operator"
            android:text="@string/minus"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_1"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_1"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_2"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_2"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_3"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_3"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/plus"
            style="@style/CalcButton.Operator"
            android:text="@string/plus"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/negate"
            style="@style/CalcButton.Operator"
            android:text="@string/negate"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_0"
            style="@style/CalcButton.Numeral"
            android:text="@string/number_0"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/number_."
            style="@style/CalcButton.Numeral"
            android:text="@string/decimal"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/equals"
            style="@style/CalcButton.Operator"
            android:background="@android:color/transparent"
            android:text="@string/equals"
            android:textColor="@android:color/white"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />
    </view>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/backspace" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <SeekBar
        android:id="@+id/seekBarSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSize"
        app:layout_constraintEnd_toStartOf="@+id/editNumberSize"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewSize"
        app:layout_constraintTop_toTopOf="@+id/textViewSize"
        tools:progress="25" />

    <TextView
        android:id="@+id/textViewSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center|end"
        android:text="Size"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/seekBarSize"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNumberSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        tools:text="25"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/seekBarSize"
        app:layout_constraintTop_toTopOf="@+id/seekBarSize" />



    <TextView
        android:id="@+id/textViewSpacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:gravity="center|end"
        android:text="Spacing"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/seekBarSpacing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSize" />

    <SeekBar
        android:id="@+id/seekBarSpacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="150"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSpacing"
        app:layout_constraintEnd_toStartOf="@+id/editNumberSpacing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewSpacing"
        app:layout_constraintTop_toTopOf="@+id/textViewSpacing"
        tools:progress="160" />

    <EditText
        android:id="@+id/editNumberSpacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_horizontal"
        tools:text="50"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarSpacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/seekBarSpacing"
        app:layout_constraintTop_toTopOf="@+id/seekBarSpacing" />

    <TextView
        android:id="@+id/textViewDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:gravity="center|end"
        android:text="Duration"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/seekBarDuration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSpacing" />

    <EditText
        android:id="@+id/editNumberDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="1000"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarDuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/seekBarDuration"
        app:layout_constraintTop_toTopOf="@+id/seekBarDuration" />

    <SeekBar
        android:id="@+id/seekBarDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="5000"
        tools:progress="1000"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDuration"
        app:layout_constraintEnd_toStartOf="@+id/editNumberDuration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewDuration"
        app:layout_constraintTop_toTopOf="@+id/textViewDuration" />

    <TextView
        android:id="@+id/preview"
        style="@style/Preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:maxLines="2"
        android:text="2500.12345678"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/display"
        app:layout_constraintVertical_weight="2" />

    <TextView
        android:id="@+id/display"
        style="@style/Display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center|right|end"
        android:maxLines="2"
        android:text="5x5x100\n+3.141592654"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/preview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="2" />

    <TextView
        android:id="@+id/textViewOpacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:gravity="right"
        android:text="Opacity"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/seekBarOpacity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDuration" />

    <SeekBar
        android:id="@+id/seekBarOpacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="255"
        tools:progress="150"
        app:layout_constraintBottom_toBottomOf="@+id/textViewOpacity"
        app:layout_constraintEnd_toStartOf="@+id/editNumberOpacity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/textViewOpacity"
        app:layout_constraintTop_toTopOf="@+id/textViewOpacity" />

    <EditText
        android:id="@+id/editNumberOpacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:inputType="number"
        tools:text="160"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarOpacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/seekBarOpacity"
        app:layout_constraintTop_toTopOf="@+id/seekBarOpacity" />

    <Switch
        android:id="@+id/switchCircleLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCircle"
        app:layout_constraintStart_toEndOf="@+id/textViewCircle"
        app:layout_constraintTop_toTopOf="@+id/textViewCircle"
        android:showText="false" />

    <TextView
        android:id="@+id/textViewCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="right"
        android:text="Circle"
        app:layout_constraintEnd_toEndOf="@+id/textViewOpacity"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpacity" />

    <Spinner
        android:id="@+id/spinnerSetting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="16dp"
        android:entries="@array/spinner_entries"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:tooltipText="Name of Setting"
        app:layout_constraintBottom_toBottomOf="@+id/switchCircleLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewLine"
        app:layout_constraintTop_toTopOf="@+id/switchCircleLine" />

    <TextView
        android:id="@+id/textViewLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Line"
        app:layout_constraintStart_toEndOf="@+id/switchCircleLine"
        app:layout_constraintTop_toTopOf="@+id/textViewCircle" />

    <TextView
        android:id="@+id/textViewPath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="Path"
        app:layout_constraintEnd_toEndOf="@+id/textViewOpacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCircle" />

    <SeekBar
        android:id="@+id/seekBarPath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:max="100"
        android:progress="100"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintStart_toEndOf="@+id/textViewPath"
        app:layout_constraintTop_toTopOf="@+id/textViewPath" />

</android.support.constraint.ConstraintLayout>